<!-- Форма для создания задачи в проект -->

<%= form_with scope: :todo, url: todos_path, :html => { :id => "TodoForm" } do |form| %>

  <%= form.text_field(:text, placeholder: "Название задачи...") %><br>
  <%= collection_select(:todo, :project_id, Project.all, :id, :title, {:prompt => 'Категория...'}) %><br>
  <div class="buttonsContainer">
  <%= button_tag('ОТМЕНА', class: "todoButton", id: "canel") %>
  <%= link_to 'OK', "", :class => 'submit-btn' %>
  </div>
<% end %>
