<!-- Форма для создания задачи в проект -->

<%= form_with scope: :todo, url: todos_path, :html => { :id => "TodoForm" } do |form| %>

  <%= form.text_field(:text, placeholder: "Название задачи...") %><br>
  <%= collection_select(:todo, :project_id, Project.all, :id, :title) %><br>

<% end %>


<%= button_tag('ОТМЕНА', id: "todoButton") %>
<%= link_to 'OK', '', :onclick => "$('#TodoForm').submit()" %>
